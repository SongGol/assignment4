<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/blue_sky"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/exp_ratio_tv"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/number_border"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0000000" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/level_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/exp_ratio_tv"
        app:layout_constraintEnd_toEndOf="@+id/exp_ratio_tv"
        app:layout_constraintTop_toTopOf="@+id/exp_ratio_tv"
        app:srcCompat="@drawable/ic_level" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/heart_count_tv"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:background="@drawable/number_border"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/exp_ratio_tv"
        app:layout_constraintEnd_toStartOf="@+id/money_iv"
        app:layout_constraintStart_toEndOf="@+id/exp_ratio_tv"
        app:layout_constraintTop_toTopOf="@+id/exp_ratio_tv"
        tools:text="0000" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/heart_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        app:layout_constraintBottom_toBottomOf="@+id/heart_count_tv"
        app:layout_constraintEnd_toEndOf="@+id/heart_count_tv"
        app:layout_constraintTop_toTopOf="@+id/heart_count_tv"
        app:srcCompat="@drawable/ic_heart" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/heart_add_iv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/heart_count_tv"
        app:layout_constraintStart_toStartOf="@+id/heart_count_tv"
        app:layout_constraintTop_toTopOf="@+id/heart_count_tv"
        app:srcCompat="@drawable/ic_add" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/money_count_tv"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/number_border"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/exp_ratio_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exp_ratio_tv"
        tools:text="0000" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/money_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/money_count_tv"
        app:layout_constraintEnd_toEndOf="@+id/money_count_tv"
        app:layout_constraintTop_toTopOf="@+id/money_count_tv"
        app:srcCompat="@drawable/ic_money" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/money_add_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/money_count_tv"
        app:layout_constraintStart_toStartOf="@+id/money_count_tv"
        app:layout_constraintTop_toTopOf="@+id/money_count_tv"
        app:srcCompat="@drawable/ic_add" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/return_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/restart_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_end_return" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/restart_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/return_iv"
        app:layout_constraintTop_toTopOf="@+id/return_iv"
        app:layout_constraintStart_toEndOf="@id/return_iv"
        app:layout_constraintEnd_toStartOf="@id/next_iv"
        app:srcCompat="@drawable/ic_end_restart"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/next_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/restart_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restart_iv"
        app:layout_constraintTop_toTopOf="@+id/restart_iv"
        app:srcCompat="@drawable/ic_end_next" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/heart_get_time_tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/number_border"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/heart_add_iv"
        app:layout_constraintStart_toStartOf="@+id/heart_iv"
        app:layout_constraintTop_toBottomOf="@+id/heart_count_tv"
        tools:text="00:00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heart_get_time_tv"
        tools:text="Faded" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/result_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/result_center_iv"
        app:srcCompat="@drawable/ic_start_default" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/result_center_iv"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_title_tv"
        app:srcCompat="@drawable/ic_start_default" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/result_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/result_left_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/result_left_iv"
        app:srcCompat="@drawable/ic_start_default" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_center_iv"
        tools:text="0000" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/max_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_score_tv"
        tools:text="최고점수: 000" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result_exp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/result_coin_iv"
        app:layout_constraintEnd_toStartOf="@+id/result_coin_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/result_coin_iv"
        app:layout_constraintHorizontal_chainStyle="packed"
        tools:text="EXP +00"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/result_coin_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/max_score_tv"
        app:layout_constraintEnd_toStartOf="@id/result_coin_tv"
        app:layout_constraintStart_toEndOf="@id/result_exp_tv"
        app:srcCompat="@drawable/ic_money"
        tools:layout_editor_absoluteX="203dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result_coin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/result_coin_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/result_coin_iv"
        app:layout_constraintTop_toTopOf="@+id/result_coin_iv"
        tools:text="+0"/>

</androidx.constraintlayout.widget.ConstraintLayout>